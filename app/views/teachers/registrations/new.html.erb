<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "teachers/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name, "名前" %> <br />
    <%= f.text_field :name %>
  </div>  
  
  <div class="field">
    <%= f.label :gender, "性別" %> <br />
    <%= f.label :gender, "男性" %>
    <%= f.radio_button :gender, "1" %>   
    <%= f.label :gender, "女性" %>
    <%= f.radio_button :gender, "2" %>
  </div>  
  
  <div class="field">
    <%= f.label :age, "年齢" %> <br />
    <%= f.number_field :age %>
  </div>  
  
  <div class="field">
    <%= f.label :prefecture, "都道府県" %> <br />
    <%= f.text_field :prefecture %>
  </div>
  
  <div class="field">
    <%= f.label :city, "市町村" %> <br />
    <%= f.text_field :city %>
  </div>
  
  <div class="field">
    <%= f.label :phone, "電話番号" %> <br />
    <%= f.telephone_field :phone %>
  </div>
  
  <div class="field">
    <%= f.label :email, "Eメール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワードの確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "作成" %>
  </div>
<% end %>

<%= render "teachers/shared/links" %>
