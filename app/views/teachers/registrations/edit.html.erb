<h2>更新</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "teachers/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :age, "年齢" %> <br />
    <%= f.number_field :age %>
  </div>  
  
  <div class="field">
    <%= f.label :prefecture, "都道府県" %> <br />
    <%= f.text_field :prefecture %>
  </div>
  
  <div class="field">
    <%= f.label :city, "市町村" %> <br />
    <%= f.text_field :city %>
  </div>
   
  <div class="field">
    <%= f.label :school, "在籍学校" %> <br />
    <%= f.text_field :school %>
  </div>
  
  <div class="field">
    <%= f.label :image, "写真" %> <br />
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <%= f.label :phone, "電話番号" %> <br />
    <%= f.telephone_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email, "Eメール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "パスワード" %> <i>(変更したくない場合は空欄にしてください。)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワードの確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>更新をやめる</h3>

<p><%= button_to "キャンセル", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "戻る", :back %>